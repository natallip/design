// Common styles of the project

html,
body
  height 100%
  background-color: white
  overflow-x: hidden
*
  box-sizing: border-box

ul, li
  padding: 0px
  margin: 0px
  list-style-type: none
  display: flex

.wrapper
  display flex
  flex-direction column
  height 100%

.content
  flex 1 0 auto
  //margin: 0 auto

.page-footer
  flex 0 0 auto
  //margin: 0 auto

.container
  width 1160px
  margin 0 auto
  @media(max-width 1360px)
      width: 700px
  @media(max-width 768px)
      width: 290px

img
  width 100%
  height auto

section
    width: 100%
    height: 100vh

.btn
    padding: 5px 30px
    display: inline-flex
    justify-content: center
    align-items: center
    font-size: 15px
    font-family: 'Raleway-ExtraBold', sans-serif
    font-weight: 600
    letter-spacing: 1px
    text-transform: uppercase
    cursor: pointer
    @media(max-width 1360px)
        font-size: 30px
        letter-spacing: 2px
        padding: 6px 46px
    @media(max-width 768px)
        font-size: 14px
        padding: 5px 20px

.btn--arrow
    background: orangelight
    p
        margin-right: 20px
    .arrow
        fill: #fff

.btn--arrow:hover, .btn--circle:hover
    background: #d78d4f

.btn--border
    border: 2px solid blackblue
    color: black
    padding: 17px 33px

.btn--circle
    width: 84px
    height: 84px
    border-radius: 50%
    background: rgba(254, 188, 128, .95)
    box-shadow: 4.5px 7.794px 20.88px 8.12px rgba(0, 1, 6, 0.07)
    display: flex
    justify-content: center
    align-items: center
    @media(max-width 1360px)
        width: 125px
        height: 125px
    @media(max-width 768px)
        width: 84px
        height: 84px

.arrow
    fill: #fff
    width: 100%
    height: 100%

.title
    font-size: 45px
    color: blackblue
    font-family: 'PlayfairDisplay-Bold', serif
    font-weight: 700
    letter-spacing: 3px
    @media(max-width 768px)
        letter-spacing: 2px
