.services
    margin-bottom: 120px
    @media(max-width 1360px)
        margin-bottom: 150px
    @media(max-width 768px)
        margin-bottom: 97px
.services__title
    margin-bottom: 60px
    @media(max-width 1360px)
        margin-bottom: 45px
    @media(max-width 768px)
        margin-bottom: 30px
.services__filter
    display: flex
    justify-content: space-between
    width: 1160px
    margin: 0 auto
    @media(max-width 1360px)
        flex-direction: column
        width: 768px
    @media(max-width 768px)
        width: 320px
.services__filter-items
    display: flex
    flex-direction: column
    flex-basis: 20%
    margin-right: 3%
    @media(max-width 1360px)
        flex-wrap: wrap
        flex-direction: row
        margin-bottom: 24px
        //margin-right: 0
    @media(max-width 768px)
        flex-basis: 100%
        flex-direction: column
        margin: 0 auto
        align-items: flex-start
        margin-bottom: 30px

.services__filter-item
    display: flex
    flex-direction: column
    font-size: 18px
    font-weight: 400
    color: greydark
    margin: 20px 0 60px
    cursor: pointer
    @media(max-width 1360px)
        margin-bottom: 64px
        flex-basis: 40%
        margin-right: 10%
        font-size: 22px
        margin-top: 0
    @media(max-width 768px)
        flex-basis: 100%
        margin-right: 0
        margin-bottom: 30px
.services__filter-item--active
    color: blackblue
    font-weight: 700
    margin-left: 30px
    @media(max-width 1360px)
        margin-left: 0
.services__slider
    flex-basis: 76%
    flex-shrink: 1
    @media(max-width 1360px)
        flex-basis: 768px
.services__item
    display: flex
    flex-direction: column

.services__item-img
    overflow: hidden
    min-height: 400px
    margin-bottom: 50px
    position: relative
    img
        width: 100%
        height: auto
        position: absolute
        left: 50%
        transform: translateX(-50%)
    @media(max-width 1360px)
        min-height: 390px
        width: 768px
        margin-bottom: 60px
        img
            height: 100%
            width: auto
    @media(max-width 768px)
        width: 320px
        margin-bottom: 26px

.services__item-blocks
    display: flex
    flex-direction: column
    @media(max-width 1360px)
        width: 700px
        margin: 0 auto
    @media(max-width 768px)
        width: 290px
.services__item-block1
    display: flex
    justify-content: space-between
.services__item-block2
    display: flex
    justify-content: space-between
    align-items: flex-end
    @media(max-width 1360px)
        flex-direction: column
        align-items: flex-start
.services__item-title
    font-size: 30px
    color: blackblue
    font-family: 'PlayfairDisplay-Regular', serif
    font-weight: 400
    letter-spacing: 2px
    margin-bottom: 20px
    @media(max-width 1360px)
        margin-bottom: 12px
    @media(max-width 768px)
        display: none
.services__item-descr
    font-size: 18px
    line-height: 1.6
    font-weight: 400
    color: colortext
    margin-right: 20%
    @media(max-width 1360px)
        margin-right: 30%
        margin-bottom: 35px
        line-height: 30px
    @media(max-width 768px)
        margin-right: 0
        font-size: 20px
        margin-bottom: 44px
.services__number
    display: flex
    margin-top: 10px
    letter-spacing: 1px
    @media(max-width 1360px)
        font-size: 22px
        margin-top: 0
    @media(max-width 768px)
        display: none
.services__number-bold
    font-weight: 700
    margin-right: 10px
.services__btn
    margin-bottom: 10px
    letter-spacing: 2px
.services__btn.btn--border
    @media(max-width 1360px)
       font-size: 18px
       padding: 20px 80px
    @media(max-width 768px)
        padding: 17px 32px
        font-size: 15px
        align-self: center
.services__slider-wrap
    position: relative
.services__item
    position: absolute
    top: 0
    left: 0
    opacity: 0
    transition: opacity .5s linear
.services__item--active
    opacity: 1
