.video
    position: relative
    margin-bottom: 120px
    @media(max-width 1360px)
        margin-bottom: 170px
    @media(max-width 768px)
        margin-bottom: 104px
.video__content
    position: relative
    min-height: 600px
    width: 1360px
    margin: 0 auto
    img
        height: 100%
        position: absolute
        left: 50%
        transform: translateX(-50%)
    @media(max-width 1360px)
        height: 814px
    @media(max-width 1360px)
        height: 620px
.video__content::before
    content: ''
    display: block
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    background: rgba(black, .7)
    z-index: 1
.video__wrap
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    z-index: 1
    display: flex
    flex-direction: column
    align-items: center
.video__text
    font-family: 'Raleway-Regular', sans-serif
    font-size: 18px
    color: #fff
    font-weight: 400
    letter-spacing: 1px
    @media(max-width 1360px)
        font-size: 22px
        max-width: 450px
        text-align: center
    @media(max-width 768px)
        line-height: 30px
.video__btn
    margin-bottom: 25px
    @media(max-width 1360px)
        margin-bottom: 35px
    @media(max-width 768px)
        margin-bottom: 25px
    .circle__icon
        @media(max-width 768px)
            width: 22px
            height: 22px
