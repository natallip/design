.page-header
    position: relative
.header__top
    position: absolute
    top: 20px
    left: 50%
    transform: translateX(-50%)
.header__bg
    position: absolute
    left: 50%
    transform: translateX(-50%)
    background: url('%=static=%content/bg.jpg') 50% 50%/cover no-repeat
    width: 1160px
    min-height: 86vh
    margin: 70px auto
    @media(max-width 1360px)
        width: 768px
        height: 100vh
        margin: 0

.header__logo
    position: absolute
    top: 0
    left: 50%
    transform: translateX(-50%)
    width: 62px
    height: 29px
    img
        width: 100%
        height: 100%
    @media(max-width 1360px)
        left: 32px
        top: 10px
    @media(max-width 768px)
        left: 20px
        width: auto
        height: auto

.logo
    @media(max-width 1360px)
        display: none
.header__logo .logo-white
    display: none
    @media(max-width 1360px)
        display: block
        width: 85px
        height: 48px
    @media(max-width 768px)
        width: 40px
        height: 23px
.header__phone
    display: flex
    position: absolute
    top: 0
    right: 0
    @media(max-width 1360px)
        display: none
.header__phone-svg
    width: 14px
    height: 14px
    margin-right: 10px

.header__phone-icon
    width: 100%
    height: 100%
    fill: greydark

.header__phone-numbers
    color: black
    font-family: 'Open Sans', sans-serif
    font-weight: 500
.btn__arrow
    @media(max-width 1360px)
        display: none
.header__content
    background: linear-gradient(to right, rgba(blue, .96) 50%, transparent 50%)
    position: relative
    color: #fff
    display: flex
    align-items: center
    @media(max-width 1360px)
        background: rgba(blue, .96)
.header__content-wrap
    width: 50%
    padding: 0 8%
    @media(max-width 1360px)
        width: 100%
        padding: 0
        display: flex
        flex-direction: column
        align-items: center
.header__title
    font-family: 'PlayfairDisplay-Bold', serif
    font-weight: 700
    font-size: 60px
    letter-spacing: 5px
    line-height: 60px
    margin: 0
    margin-bottom: 20px
    @media(max-width 1360px)
        width: 90%
        text-align: center
        font-size: 100px
        line-height: 90px
        margin-bottom: 50px
        letter-spacing: 7px
    @media(max-width 768px)
        font-size: 48px
        line-height: 50px
        margin-bottom: 20px
        width: 100%
        letter-spacing: 3px
.header__text
    font-family: 'Open Sans', sans-serif
    font-size: 14px
    font-weight: 500
    letter-spacing: 1px
    margin-bottom: 30px
    line-height: 1.6
    @media(max-width 1360px)
        width: 90%
        text-align: center
        font-size: 26px
        margin-bottom: 65px
        line-height: 1.2
        letter-spacing: 2px
    @media(max-width 768px)
        font-size: 18px
        letter-spacing: 1px
        font-weight: 300
        opacity: .8
        width: 100%
        margin-bottom: 30px

.header__socials
    position: absolute
    left: 50%
    transform: translateX(-50%)
    bottom: 15px
    @media(max-width 1360px)
        display: none
.socials__link
    opacity: .8
    margin-right: 20px
    &:last-child
        margin-right: 0
    &:hover
        opacity: 1
.socials__icon
    fill: #fff
    width: 16px
    height: 16px
.header__menu
    position: absolute
    top: 0
    left: 0

.overlay__menu
    display: flex
    flex-direction: column
    align-items: center
    position: relative
    height: 70%
    top: 50%
    transform: translateY(-50%)
    font-size: 50px
    font-weight: 400
.overlay
    position: fixed
    top: 0%
    left: 0%
    width: 100vw
    height: 0%
    background-color: accent
    opacity: 0
    visibility: hidden
    overflow: hidden
    transition: opacity .35s, visibility .35s, height .35s

.overlay.is-active
    opacity: 1
    visibility: visible
    height: 100vh
    .overlay__item
        animation: fadeInRight .5s ease forwards
        animation-delay: .35s
        &:nth-of-type(2)
            animation-delay: .4s
        &:nth-of-type(3)
            animation-delay: .45s
        &:nth-of-type(4)
            animation-delay: .50s

.overlay__item
    display: block
    height: 15%
    // height: calc(100% / 4)
    min-height: 50px
    position: relative
    opacity: 0

.overlay__link
    display: block
    position: relative
    color: #fff
    font-size: 15px
    font-weight: 700
    text-decoration: none
    overflow: hidden
    padding-bottom: 10px
    text-transform: uppercase
    @media(max-width 1360px)
        font-size: 18px

    &:hover:after, &:focus:after, &:active:after
       width: 100%

    &:after
        content: ''
        position: absolute
        bottom: 0
        left: 50%
        width: 0%
        transform: translateX(-50%)
        height: 3px
        background: #fff
        transition: .35s

.header__hamburger
    position: absolute
    top: 15px
    cursor: pointer
    @media(max-width 1360px)
        right: 11%
        top: 25px
    @media(max-width 768px)
        //right: 27%
        right: 20px

.hamburger .line
    width: 28px
    height: 3px
    margin: 6px auto
    background-color: #fff
    display: block
    transition: all .3s ease-in-out
    @media(max-width 1360px)
        width: 65px
        height: 5px
        margin: 15px auto
        border-radius: 3px
    @media(max-width 768px)
        width: 28px
        height: 3px
        margin: 6px auto

.hamburger.is-active .line:nth-child(2)
    opacity: 0
.hamburger.is-active .line:nth-child(1)
    transform: translateY(9px) rotate(45deg)
    @media(max-width 1360px)
        transform: translateY(20px) rotate(45deg)
    @media(max-width 768px)
        transform: translateY(9px) rotate(45deg)
.hamburger.is-active .line:nth-child(3)
    transform: translateY(-9px) rotate(-45deg)
    @media(max-width 1360px)
        transform: translateY(-20px) rotate(-45deg)
    @media(max-width 768px)
        transform: translateY(-9px) rotate(-45deg)

@keyframes fadeInRight
    0%
        opacity: 0
        left: 20%
    100%
        opacity: 1
        left: 0
.header__arrow
    display: none
    @media(max-width 1360px)
        display: block
        position: absolute
        bottom: 20px
        left: 50%
        transform: translateX(-50%) rotate(90deg)
        opacity: .8
        .header__arrow-icon
            fill: #fff
            width: 40px
            height: 80px
.header__arrow:hover
    opacity: 1
