.contacts
    background: linear-gradient(to right, blue 50%, transparent 50%),
        url('%=static=%content/kitchen.jpg') 100% 50%/cover no-repeat
    color: #fff
    margin-bottom: 120px
    @media(max-width 1360px)
        background: linear-gradient(to right, rgba(blue, .9) 100%),
            url('%=static=%content/kitchen.jpg') 100% 50%/cover no-repeat rgba(blue, .8)
        margin-bottom: 175px
    @media(max-width 768px)
        margin-bottom: 140px
.contacts__wrap
    width: 42%
    @media(max-width 1360px)
        width: 100%
        display: flex
        flex-direction: column
        align-items: center
.contacts__title.title
    color: #fff
    padding: 65px 0 20px
    @media(max-width 1360px)
        text-align: center
        line-height: 65px
        padding-bottom: 0
    @media(max-width 768px)
        line-height: 55px
        margin-bottom: 12px
        padding-top: 80px

.contacts__text
    font-family: 'Raleway-Regular', sans-serif
    font-size: 14px
    line-height: 1.6
    font-weight: 400
    letter-spacing: 1px
    color: white
    margin-bottom: 30px
    @media(max-width 1360px)
        text-align: center
        width: 70%
        font-size: 22px
        opacity: .8
        line-height: 1.2
        margin-bottom: 45px
    @media(max-width 768px)
        font-size: 18px
        width: 100%
        line-height: 24px
.contacts__form
    padding-bottom: 80px
    //margin: 0 auto
    width: 70%
    @media(max-width 768px)
        width: 100%
    @media(max-width 768px)
        padding-bottom: 100px
.form__container
    display: flex
    flex-direction: column
    margin-bottom: 36px
    // background: url('%=static=%svg/user.svg') 100% 50%/cover no-repeat
    position: relative
    @media(max-width 1360px)
        margin-bottom: 45px
    @media(max-width 768px)
        margin-bottom: 54px
.form__input
    outline: none
    background-color: transparent
    border: none
    padding: 5px 20px 10px 10px
    border-bottom: 1px solid white
    @media(max-width 1360px)
        border-width: 2px
.form__label
    color: rgba(white, .6)
    position: absolute
    //top: 10px
    line-height: 35px
    transition: .5s
    @media(max-width 1360px)
        font-size: 18px
    @media(max-width 768px)
        line-height: 24px
.form__container--active .form__label
    //top: 0
    transform: translateY(-30px)
    font-size: 12px
    color: #fff
.form__icon
    position: absolute
    fill: rgba(white, .6)
    z-index: 1
    bottom: 10px
    right: 0
    width: 20px
    height: 20px
.form__input--submit
    background-color: transparent
    border: 2px solid #fff
    outline: none
    margin-bottom: 20px
    margin-top: 10px
    width: 100%
    height: 65px
    letter-spacing: 2px
    @media(max-width 1360px)
        font-size: 18px
        background: accent
        border: none
        margin-bottom: 18px
    @media(max-width 768px)
        margin-top: 0
        height: 70px
        margin-bottom: 14px

.form__text
    font-family: 'Raleway-Light', sans-serif
    font-size: 14px
    font-weight: 300
    color: white
    @media(max-width 1360px)
        font-size: 18px
        text-align: center
    @media(max-width 768px)
        line-height: 20px
