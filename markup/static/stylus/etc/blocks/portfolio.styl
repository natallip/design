.portfolio
    margin-bottom: 120px
    @media(max-width 1360px)
        margin-bottom: 150px
    @media(max-width 768px)
        margin-bottom: 55px
.portfolio__title
    margin-bottom: 54px
    @media(max-width 1360px)
        margin-bottom: 38px
.portfolio__filter
    display: flex
    margin-bottom: 46px
    @media(max-width 1360px)
        margin-bottom: 40px
    @media(max-width 768px)
        flex-direction: column
        margin-bottom: 12px
.portfolio__filter-item
    margin-right: 60px
    padding-bottom: 8px
    font-size: 18px
    font-weight: 400
    color: greydark
    cursor: pointer
    @media(max-width 1360px)
        font-size: 20px
        margin-right: 30px
    @media(max-width 768px)
        margin-right: 0
        margin-bottom: 20px
.portfolio__filter-item--active
    color: colortext
    font-weight: 700
    border-bottom: 2px solid grey
    @media(max-width 1360px)
        border: none
.slider
    overflow: hidden
    position: relative
    height: 555px
    width: 1160px
    margin: 0 auto
    @media(max-width 1360px)
        height: 610px
        width: 768px
    @media(max-width 768px)
        height: 530px
        width: 320px

.slider__list
    display: flex
    flex-wrap: nowrap
    position: absolute
    top: 0%
    left: 0%
    transition: .5s all linear

.slider__item
    width: 348px
    position: relative
    height: 555px
    &::before
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: rgba(black, .7)
        z-index: 1
    @media(max-width 1360px)
        width: 130px
        height: 610px
    @media(max-width 768px)
        height: 530px
        width: 30px

.slider__img
    overflow: hidden
    height: 555px
    width: 100%
    img
        display: block
        height: auto
        width: 100%
        @media(max-width 1360px)
            height: 100%
            width: auto

    @media(max-width 1360px)
        height: 610px
    @media(max-width 768px)
        height: 530px

.slider__item-title
    position: absolute
    font-size: 16px
    color: #fff
    font-family: 'Raleway-SemiBold', sans-serif
    font-weight: 500
    padding: 30px
    z-index: 1
    @media(max-width 1360px)
        display: none
        color: blackblue
        font-weight: 700
        text-align: center
        left: 50%
        transform: translateX(-50%)
        padding: 0
        font-size: 20px
    @media(max-width 768px)
        font-size: 16px
        width: 100%

.slider__item-category
    position: absolute
    bottom: 15%
    left: -25px
    font-size: 14px
    color: white
    font-family: 'Raleway-SemiBold', sans-serif
    font-weight: 500
    transform: rotate(-90deg)
    z-index: 1
    @media(max-width 1360px)
        display: none

.slider__btn
    display: none
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    z-index: 1

.circle__icon
    fill: #fff
    width: 32px
    height: 32px
.slider__item--active
    width: 464px
    position: relative
    &::before
        display: none
    @media(max-width 1360px)
        height: 700px
        margin: 0 22px
    @media(max-width 768px)
        height: 620px
        width: 216px

    .slider__item-title
        display: none
        @media(max-width 1360px)
            position: absolute
            bottom: 0
            display: block
        @media(max-width 768px)
            bottom: 30px

    .slider__item-category
        display: none
    .slider__btn
        display: flex
        @media(max-width 1360px)
            display: none
    img
        height: auto
        width: 100%
        @media(max-width 1360px)
            height: auto
            width: 100%
        @media(max-width 768px)
            height: 100%
            width: auto

.slider__contr
    position: absolute
    top: 50%
    width: 50px
    height: 20px
    z-index: 1
    cursor: pointer
    @media(max-width 1360px)
        width: 130px
        height: 100%
        opacity: 0
        top: 0
    @media(max-width 768px)
        width: 30px
.slider__contr--prev
    left: 0
.slider__contr--next
    right: 0
