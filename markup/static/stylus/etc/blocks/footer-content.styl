.page-footer
    background: blue
.footer-content
    display: flex
    justify-content: space-between
    padding: 75px 0
    align-items: center
    @media(max-width 768px)
        flex-direction: column
        padding-top: 100px
.footer__block
    display: flex
    flex-direction: column
    align-items: center
    @media(max-width 768px)
        order: -1
        margin-bottom: 50px
.footer__logo
    width: 70px
    height: 40px
    margin-bottom: 40px
    img
        width: 100%
        height: 100%
.footer__copyright
    font-family: 'Raleway-Medium', sans-serif
    font-size: 16px
    font-weight: 500
    color: #ffc487
    @media(max-width 768px)
        font-size: 20px
        margin-bottom: 10px
.footer__socials .socials__icon
    width: 20px
    height: 20px
    @media(max-width 768px)
        width: 28px
        height: 28px
.footer__socials .socials__link
    margin-right: 40px
.footer__socials .socials__link:last-child
    margin-right: 0
