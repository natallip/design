.reviews__slider
    position: relative
    overflow: hidden
    margin: 0 auto 150px
    width: 1360px
    height: 350px
    @media(max-width 1360px)
        width: 740px
    @media(max-width 768px)
        width: 300px
        height: 680px

.reviews__list
    display: flex
    flex-wrap: nowrap
    justify-content: space-between
    margin-bottom: 80px
    position: absolute
    top: 0
    left: 0
    @media(max-width 1360px)
        margin-left: -190px
        margin-bottom: 60px

.reviews__item
    display: flex
    align-items: center
    width: 190px
    @media(max-width 768px)
        flex-direction: column
        align-items: center
.reviews__img
    width: 190px
    height: 190px
    position: relative
    overflow: hidden
    &::before
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: rgba(black, .7)
        z-index: 1
    img
        height: 100%
        width: auto
.reviews__content
    min-height: 270px
    background-color: #fff
    order: -1
    width: 650px
    padding: 40px 140px 40px 68px
    box-shadow: 4px 6.928px 36.72px 14.28px rgba(0, 0, 1, 0.02)
    display: none
    flex-direction: column
    justify-content: center
    @media(max-width 768px)
        order: 1
        width: 300px
        padding: 20px
        padding-bottom: 40px
        padding-top: 190px
        margin-top: -150px
.reviews__title
    margin-bottom: 75px
    @media(max-width 1360px)
        margin-bottom: 50px
    @media(max-width 768px)
        text-align: center
        margin-bottom: 35px
.reviews__name
    font-family: 'Raleway-SemiBold', sans-serif
    font-size: 22px
    font-weight: 600
    color: colortitle
    margin-bottom: 8px
.reviews__services
    font-family: 'Raleway-Bold', sans-serif
    font-size: 16px
    font-weight: 700
    color: accent
    margin-bottom: 25px
    @media(max-width 768px)
        margin-bottom: 15px
.reviews__text
    font-family: 'Raleway-Light', sans-serif
    font-size: 16px
    line-height: 1.6
    font-weight: 300
    color: colortext
    @media(max-width 768px)
        font-size: 20px
        line-height: 30px
        text-align: center
.reviews__item--active
    width: 790px
    margin: 0 110px
    @media(max-width 1360px)
        width: 736px
        margin: 0 16px
    @media(max-width 768px)
        width: 300px
        margin: 0 10px
    .reviews__img
        margin-left: -78px
        @media(max-width 768px)
            margin-left: 0
    .reviews__img::before
        display: none
    .reviews__content
        display: flex
.reviews__contrs
    display: flex
    justify-content: center
    position: absolute
    bottom: 0
    left: 50%
    transform: translateX(-50%)
.reviews__contr-item
    width: 26px
    height: 6px
    margin-right: 10px
    background-color: rgba(26, 68, 74, 0.212)
    cursor: pointer
    &:last-child
        margin-right: 0
.reviews__contr-item--active
    background-color: rgb(26, 68, 74)
